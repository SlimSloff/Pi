{% extends 'base2.html.twig' %}

{% block body %}
    <h1>Pere</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pere.id }}</td>
            </tr>
            <tr>
                <th>Nomprenom</th>
                <td>{{ pere.nomPrenom }}</td>
            </tr>
            <tr>
                <th>Nomfils</th>
                <td>{{ pere.nomfils }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ pere.telephone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ pere.adresse }}</td>
            </tr>
            <tr>
                <th>Payement</th>
                <td>{{ pere.payement }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pere_index') }}">Back to the list</a>
        </li>
